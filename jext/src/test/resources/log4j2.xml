<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
   <Appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="[%t] [%level] %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console"/>
        </Root>
   </Loggers>
</Configuration>